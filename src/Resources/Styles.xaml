<ResourceDictionary x:Uid="ResourceDictionary_1" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- button style -->
	<Style TargetType="Button">
		<Setter Property="Height" Value="24" />
		<Setter Property="MinWidth" Value="100" />
	</Style>

	<!-- hex dump datagrid cells -->
	<Style TargetType="DataGridCell" x:Key="HexDumpByteGridCellStyle">
		<Setter Property="TextBlock.TextAlignment" Value="Center" />
		<Setter Property="TextBlock.FontFamily" Value="Consolas" />
		<Setter Property="TextBlock.FontSize" Value="10" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type DataGridCell}">
					<Grid Background="{TemplateBinding Background}">
						<ContentPresenter VerticalAlignment="Center" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="DataGridCell" x:Key="HexDumpLineGridCellStyle" BasedOn="{StaticResource HexDumpByteGridCellStyle}">
		<Setter Property="TextBlock.FontSize" Value="11" />
		<Setter Property="TextBlock.FontWeight" Value="Bold" />
	</Style>

	<Style TargetType="DataGridCell" x:Key="HexDumpByteGridCellStyle0" BasedOn="{StaticResource HexDumpByteGridCellStyle}">
		<Setter Property="IsSelected">
			<Setter.Value>
				<Binding Path="[0].IsSelected" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" />
			</Setter.Value>
		</Setter>
		<Setter Property="ToolTip" Value="{Binding [0].DescriptionText}" />
	</Style>

